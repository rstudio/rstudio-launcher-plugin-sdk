book_filename: "rlps-${RLPS_VERSION}-quickstart-guide"
delete_merged_file: true
output: 
  bookdown::gitbook:
    css: style.css
    config:
      toc:
        before: |
          <li><a href="./">RStudio Launcher Plugin SDK QuickStart Guide</a></li>
        after: |
          <li><a href="https://github.com/rstudio/bookdown" target="blank">Published with bookdown</a></li>
      download: ["pdf", "epub"]
  bookdown::pdf_book:
    includes:
      in_header: preamble.tex
    latex_engine: xelatex
    keep_tex: yes
  bookdown::epub_book: default
